@using Order.Model.Models;
@model User

<form method="post" action="/User/EditUser">
    <div class="border p-3 mt-4">
        <div class="row pb-2">
            <h2 class="text-primary">Edit User</h2>
            <hr />
        </div>
        <div class="mb-3 row p-1">
            <label asp-for="Name" class="p-0"></label>
            <input asp-for="Name" class="form-control" />
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>

        <div class="form-check">
            <input type="checkbox" class="form-check-input" asp-for="EmailConfirmed" />
            <label class="form-check-label" asp-for="EmailConfirmed">Confirmed Email</label>
            <!--<span asp-validation-for="EmailConfirmed" class="text-danger"></span>-->
        </div>

        <div class="mb-3 row p-1">
            <label asp-for="Role" class="p-0">Account Type:</label>
            <select asp-for="Role" class="form-control">
                <option value="Customer">Customer</option>
                <option value="Admin">Admin</option>
            </select>
        </div>

        

        <input type="hidden" asp-for="Id" />

        <div class="row">
            <div class="col-6 col-md-3">
                <button type="submit" class="btn btn-primary form-control">Edit</button>
            </div>
            <div class="col-6 col-md-3">
                <a asp-controller="User" asp-action="Index" class="btn btn-secondary form-control">
                    Back to List
                </a>
            </div>
        </div>
    </div>
</form>
